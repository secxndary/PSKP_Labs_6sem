<div class="form-part contacts" style="height: 79%;">
    <div class="list-container" style="height: 30rem;">
        {{#each contacts}}
            {{>contact}}
        {{/each}}
    </div>
</div>


<form class="form" data-key="{{currentContact.id}}">
    <input class="input" type="text" required name="name" placeholder="ФИО" value="{{currentContact.name}}"
           oninput="blockButton('{{currentContact.name}}', '{{currentContact.phone}}')">

    <input class="input" type="tel" required name="phone" placeholder="Телефон" value="{{currentContact.phone}}"
           oninput="blockButton('{{currentContact.name}}', '{{currentContact.phone}}')">
</form>


<div class="controls-wrapper">
    <div class="form-part control" >
        <button onclick="editContact()">Изменить</button>
    </div>
    <div class="form-part control">
        <button onclick="deleteContact()" id="delete-button">Удалить</button>
    </div>
    <div class="form-part control" >
        <button onclick="{{goBack}}">Отказаться</button>
    </div>
</div>